<h1><%= @title %></h1>

<%= will_paginate %>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= gravatar_for user, :size => 30 %>
      <%= link_to user.name, user %>
      <% if current_user.admin? %>
      | <%= link_to "delete", user, :method => :delete, :confirm => "Are you sure?",
                                    :title => "Delete #{user.name}" %>
  <% end %>
    </li>
  <% end %>
</ul>

<%= will_paginate %>
